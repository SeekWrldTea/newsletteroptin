<div class="container">
  <div class="row">
    <div class="col-md-9 col-sm-8">
      <% @articles.each do |a| %>
          <div class="media margin-t-40">
            <div class="media-left">
              <%= link_to image_tag('actu_'+current_domain+'.jpg', class: 'media-object'), article_path(a.slug) %>
            </div>
            <div class="media-body">
              <div class="media-heading"><%= a.title %></div>
              <%= a.excerpt %>
              <br /><span class="suite"><%= link_to raw('<i class="fa fa-chevron-circle-right"></i>Lire la suite'), article_path(a.slug) %></span>
            </div>
          </div>
      <% end %>
      <div class="row">
        <div class="col-sm-10 col-sm-offset-1">
          <div class="text-center">
            <%= paginate @articles %>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-3 col-sm-4 sidebar">
      <%= render 'sidebar' %>
    </div>
  </div>
</div>